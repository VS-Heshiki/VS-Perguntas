<%- include ("partials/header.ejs") %>
<body>
    <%- include ("partials/navbar.ejs") %>
    <br>
    <div class="container card" id="form-question">
        <h1><%= question.title %></h1>
        <hr>
        <h3><%= question.description %></h3>
    </div>
    <div class="container card" id="form-question">
        <form method="post" action="/answer">
            <h3 style="margin:0.5em">Responda</h3>
            <textarea class="form-control" placeholder="Insira sua resposta" name="body"></textarea>
            <br>
            <input type="hidden" name="question" value="<%= question.id%>">
            <button type="submit" class="btn btn-primary" style="margin-bottom:2em">Responder!</button>
        </form>
    </div>

    <div class="container card" id="form-question">
        <h3>Respostas</h3>
        <hr>
        <% answers.forEach(answers => {%>
            <div class="card" id="list-question">
                <div class="card-body">
                    <p><%= answers.body %></p>
                </div>
            </div>
            <br>
        <%})%>
    </div>
</body>
<%- include("partials/footer.ejs") %>